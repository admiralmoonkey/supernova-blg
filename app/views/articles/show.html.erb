<p>
  <strong>Title:</strong>
  <%= sanitize @article.title.html_safe, tags: %w(a, img), attributes: %w(href, src) %>
</p>

<p>
  <strong>Text:</strong>
  <%= sanitize @article.text.html_safe, tags: %w(a, img), attributes: %w(href, src) %>
</p>

<h2>Comments</h2>
<!--<%= render @article.comments %>-->
<%= render 'comments' %>
<%= will_paginate @comments %>


<% if signed_in? %>
  <h2>Add a Comment:</h2>
  <%= render 'comments/form' %>
<% else %>
  <p>Sign in to comment</p>
<% end %>

<% if signed_in? && current_user.admin?%>
  <%= link_to 'Edit', edit_article_path(@article) %>|
  <%= link_to 'Delete', article_path(@article),
                  method: :delete,
                  data: {confirm: 'Are you sure?'} %>|
<% end %>

<%= link_to 'Back', articles_path %>
