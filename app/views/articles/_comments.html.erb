    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p>
              <%= sanitize comment.commenter.html_safe%>
              <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p>
            <%=sanitize comment.body.html_safe %></p>
        </div>

      <% if signed_in? && current_user.admin? %>
          <%= link_to 'Delete', article_comment_path(comment.article, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

    <% end %>
